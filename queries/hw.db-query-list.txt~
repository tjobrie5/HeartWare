// create the database file with sqlite3
sqlite3 hw.db

// modify output
.mode columns
.headers on

// tables
.tables

// creating a table called profiles
CREATE TABLE profiles
    ( profileId INTEGER PRIMARY KEY, userName TEXT NOT NULL,
    sex TEXT, favExercise TEXT, disabilities TEXT,
    workoutLocation TEXT, workoutLevel TEXT, steps INTEGER );

// inserting into the profiles table
INSERT INTO profiles (userName, sex, favExercise, disabilities, workoutLocation, workoutLevel)
    values ('steve', 'male', 'skiing', 'none', 'Miami', 'easy');

// update
UPDATE profiles SET steps = 4, workoutLevel = 'medium' WHERE userName = 'steve';


// exit
.exit
